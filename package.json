{
  "name": "discord-translate-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "setup:bin": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-binaries.ps1 || bash ./scripts/setup-binaries.sh",
    "dev": "powershell -ExecutionPolicy Bypass -File ./scripts/dev.ps1 || bash ./scripts/dev.sh",
    "command-register": "tsx src/register-commands.ts",
    "command-clear": "tsx src/clear-commands.ts",
    "prebuild": "npm run setup:bin",
    "build": "tsc -p tsconfig.json",
    "start": "powershell -ExecutionPolicy Bypass -File ./scripts/start.ps1 || bash ./scripts/start.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.46.1",
    "discord.js": "^14.15.3",
    "dotenv": "^16.6.1",
    "@discordjs/voice": "^0.18.0",
    "prism-media": "^1.3.5",
    "ffmpeg-static": "^5.2.0",
    "opusscript": "^0.0.8",
    "libsodium-wrappers": "^0.7.13"
  },
  "devDependencies": {
    "@types/node": "^20.19.23",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
